<div class="ember-view h-100">
  {{page-title 'Tepache Mode'}}
  <div class="tepache-mode h-100">
    <TepacheErrorAlert @message="{{this.errorMessage}}" />
    {{#if this.loading}}
      <div class="container">
        <span class="align-middle spinner-border mx-auto" role="status"></span>
      </div>
    {{else}}
      {{outlet}}
    {{/if}}
  </div>
</div>