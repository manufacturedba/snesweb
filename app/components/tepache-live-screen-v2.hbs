<div
  class="tepache-live-screen container-fluid justify-content-center"
  {{will-destroy this.remove}}
>
  {{#if (is-active @gameSessionModel.state)}}
    {{#if this.ovenPlayerConfig}}
      <div class="col-md-6 col-xs-12">
        <TepacheVideoPlayer @options={{this.ovenPlayerConfig}} />
      </div>
    {{/if}}
  {{/if}}
  {{#if (is-paused @gameSessionModel.state)}}
    <div class="jumbotron jumbotron-fluid bg-dark text-light">
      <div class="container text-center p-5">
        <div class="row">
          <div class="col-12">
            <h2 class="display-4">
              {{capitalize 'paused'}}
            </h2>
          </div>
          <div class="col-12 p-5"></div>
          <div class="col-12 p-5"></div>
        </div>
        <br />
      </div>
      <br class="mt-5" />
    </div>
  {{/if}}
</div>