<div
  class="tepache-live-screen-v2__metadata border-end d-flex flex-grow-0 bg-dark text-white py-2 px-4 border-bottom border-top"
>
  <LinkTo @route="authenticated.base.game" @model={{@game.id}}>
    <TepacheThumbnail
      @thumbnail={{@game.logo}}
      class="tepache-live-screen-v2__thumbnail flex-shrink-0 border border-primary rounded-circle me-4"
    />
  </LinkTo>
  <div class="flex-grow-1">
    <div class="small mt-1 mb-2 d-flex justify-content-between">
      <div class="flex-grow-1">
        <span class="me-1">
          {{@game.title}}
        </span>
        <div class="badge bg-success small">
          {{@gameSessionModel.state}}
        </div>
      </div>
      <div class="flex-grow-0">
        <BsButton
          class="me-4 text-white"
          @size="sm"
          @type="dark"
          {{on 'click' this.report}}
        >
          <i class="bi bi-flag-fill"></i>
        </BsButton>
      </div>
    </div>
    <div class="mx-2 mb-1 small d-flex justify-content-between">
      <div class="flex-grow-1">
        <span class="me-2">
          <BsTooltip @placement="top">
            {{this.totalOccupancy}}
            active players
            {{short-date @gameSessionModel.createdAt}}
          </BsTooltip>
          <i class="bi bi-person-video"></i>
          {{this.totalOccupancy}}
        </span>
        <span class="me-2">
          <BsTooltip @placement="top">
            Game session was created on
            {{short-date @gameSessionModel.createdAt}}
          </BsTooltip>
          <i class="bi bi-calendar-event"></i>
          {{short-date @gameSessionModel.createdAt}}
        </span>
        <span class="me-2">
          <BsTooltip @placement="top">
            Chat messages sent to console
          </BsTooltip>
          <i class="bi bi-check2-square"></i>
          Chat mode
        </span>
      </div>
    </div>
  </div>
  <TepacheReportingModal @open={{this.reportingModalOpen}} />
</div>