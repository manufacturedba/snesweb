<div
  class="tepache-live-screen-v2__metadata border-end d-flex flex-grow-0 bg-dark text-white py-2 px-2 border-bottom border-top">
  <div class="flex-grow-1 flex-shrink-1">
    <div class="small mt-1 mb-1 d-flex justify-content-between">
      <div class="flex-grow-1">
        <span class="me-1">
          {{@game.title}}
        </span>
        <div class="badge bg-success small me-2">
          LIVE
        </div>
        <span class="me-2">
          <BsTooltip @placement="top">
            {{@totalOccupancy}}
            active players
          </BsTooltip>
          <i class="bi bi-person-video"></i>
          {{@totalOccupancy}}
        </span>
      </div>
      <div class="flex-grow-0">
        <BsButton class="me-4 text-white" @size="sm" @type="dark" {{on 'click' this.report}}>
          <i class="bi bi-flag-fill"></i>
        </BsButton>
      </div>
    </div>
  </div>
  <TepacheReportingModal @open={{this.reportingModalOpen}} />
</div>