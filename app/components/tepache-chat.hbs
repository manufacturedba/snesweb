<div
  class="tepache-chat h-100 row d-flex flex-column bg-dark flex-nowrap justify-content-between"
>
  <div
    class="tepache-chat__header d-none d-lg-flex text-center text-white border-bottom sticky-top bg-dark"
  >
    <h2 class="lead p-2">
      Stream Chat
    </h2>
  </div>
  <div
    class="tepache-chat__message-container h-100 text-white small d-flex flex-shrink-1 flex-column p-3"
    data-list-container-selector
  >
    <ul
      class="list-group list-group-flush tepache-chat__message-list-group position-relative pb-md-0"
    >
      <li
        class="list-group-item tepache-chat__message-list-item tepache-chat__message-list-item--detector position-absolute"
      ></li>
      {{#each @messages as |message|}}
        <li
          class="list-group-item tepache-chat__message-list-item"
          data-list-scroll-detector
          {{did-insert this.scrollToBottom}}
        >
          <span
            class="tepache-chat__publisher"
            style="color: {{string-to-random-color message.publisher}}"
          >
            {{message.publisher}}
            :
          </span>
          {{message.message}}
        </li>
      {{/each}}
    </ul>
  </div>
  {{#if @showInput}}
    <div
      class="tepache-chat__message-input justify-content-end flex-grow-1 flex-column px-1 p-2 d-none d-sm-flex border-top"
    >
      <TepacheChatInput @onMessage={{this.message}} />
    </div>
    <div
      class="tepache-chat__message-input d-flex justify-content-end flex-grow-1 flex-column p-2 d-sm-none bg-dark border-top"
    >
      <TepacheChatInput @onMessage={{this.message}} />
    </div>
  {{else}}
    <TepacheGameClientController
      class="w-100 flex-grow-0"
      @chatChannel={{@chatChannel}}
    />
  {{/if}}
</div>