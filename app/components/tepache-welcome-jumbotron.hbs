<div class="jumbotron text-white p-4 text-center">
  <h2 class="display-2">
    MAGWEST 2022
  </h2>
  <p class="lead">
    Live from San Jose, CA
  </p>
  <p class="lead">
    August 19 - 21st
  </p>
  <div class="mt-4">
    <div class="d-inline mx-auto">
      {{#if this.isDisabled}}
        <BsTooltip @placement="top">
          Disabled until MagWest
        </BsTooltip>
      {{/if}}
      <BsButton
        @type="primary"
        @size="lg"
        disabled={{this.isDisabled}}
        @onClick={{this.transitionToMagwest}}
      >
        LET'S GO
      </BsButton>
    </div>
  </div>
</div>