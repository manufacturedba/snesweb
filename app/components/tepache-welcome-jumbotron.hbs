<div class="jumbotron text-white p-4 text-center">
  <h2 class="display-2">
    Now playing Final Fantasy 4
  </h2>
  <p class="lead">
    Welcome beta tester!
  </p>
  <div class="mt-4">
    <div class="d-inline mx-auto">
      {{#if this.isDisabled}}
        <BsTooltip @placement="top">
          Game session expired
        </BsTooltip>
      {{/if}}
      <BsButton
        @type="primary"
        @size="lg"
        disabled={{this.isDisabled}}
        @onClick={{this.transitionToMagwest}}
      >
        LET'S GO
      </BsButton>
    </div>
  </div>
</div>